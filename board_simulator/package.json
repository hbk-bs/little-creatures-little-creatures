{
  "name": "board_simulator",
  "devDependencies": {
    "http-server": "14.1.1",
    "nodemon": "3.0.3"
  },
  "scripts": {
    "dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "**/*.html",
      "**/*.js",
      "**/*.css"
    ],
    "ext": "js,html,css",
    "exec": "http-server --port 8080"
  }
}
